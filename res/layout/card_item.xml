<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/blue_dark"
    app:cardMaxElevation="30dp"
    android:layout_marginVertical="14dp"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tugas"
            android:text="id"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mk_title"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/judul_tugas"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:layout_below="@+id/mk_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/judul_tugas"
            android:textSize="12sp"
            android:justificationMode="inter_word"
            android:layout_marginVertical="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/box_card_bottom"
            android:layout_below="@+id/deskripsi"
            android:paddingHorizontal="20dp">
            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_marginVertical="4dp"
                android:src="@drawable/masuk_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/masuk"
                android:layout_marginLeft="22dp"
                android:layout_marginVertical="6dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_marginVertical="4dp"
                android:src="@drawable/deadline_logo"
                android:layout_toLeftOf="@id/deadline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deadline"
                android:layout_marginLeft="4dp"
                android:layout_marginVertical="6dp"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>