<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/grey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/box_rounded_gradient">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-INFO TI 1"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel1"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/box_rounded">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid1"
            android:rowCount="4"
            android:columnCount="3">
            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Mahasiswa"
                android:id="@+id/btn_mhs"
                android:textColor="@color/black"
                android:background="@drawable/btn_mahasiswa" />
            <View
                android:layout_height="60dp"
                android:layout_width="1dp"
                android:background="#c0c0c0"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Admin"
                android:id="@+id/btn_admin"
                android:textColor="@color/black"
                android:background="@drawable/btn_admin"/>
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="60dp"
            android:background="#c0c0c0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:id="@+id/rel_mahasiswa"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="LOGIN MAHASISWA"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textColor="@color/blue_dark"
                android:textSize="12sp"
                android:text="NIM"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/nim"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/blue_dark"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:textColor="@color/blue_dark"
                android:textSize="12sp"
                android:text="Password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pass_mhs"
                android:layout_marginTop="180dp"
                android:backgroundTint="@color/blue_dark"
                android:inputType="textPassword"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_mhs"
                android:textColor="@color/blue_dark"
                android:text="Remember me"
                android:layout_marginTop="230dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login_mhs"
                android:text="LOGIN"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="270dp"
                android:background="@drawable/btn_login"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum punya akun? Hubungi Admin!"
                android:textSize="11sp"
                android:textAlignment="center"
                android:textColor="@color/blue_dark"
                android:layout_marginTop="330dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:id="@+id/rel_admin"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="LOGIN ADMIN"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textColor="@color/blue_dark"
                android:textSize="12sp"
                android:text="Username"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/user_admin"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/blue_dark"
                android:inputType="text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:textColor="@color/blue_dark"
                android:textSize="12sp"
                android:text="Password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pass_admin"
                android:layout_marginTop="180dp"
                android:backgroundTint="@color/blue_dark"
                android:inputType="textPassword"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_admin"
                android:text="Remember me"
                android:textColor="@color/blue_dark"
                android:layout_marginTop="230dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login_admin"
                android:text="LOGIN"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="270dp"
                android:background="@drawable/btn_login"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum punya akun? Hubungi Admin!"
                android:textSize="11sp"
                android:textAlignment="center"
                android:textColor="@color/blue_dark"
                android:layout_marginTop="330dp" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright \u00a9 Kelompok OP 4 Ti 1"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/blue_dark"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>